<%= form_for [current_user, @idea] do |f| %>
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>

	<%= f.label :body, "Description" %>
	<%= f.text_area :body %>

	<%= f.label :category_id, "Category" %>
	<%= f.collection_select :category_id, @categories, :id, :name %>

	<%= f.collection_check_boxes :image_ids, @images, :id, :name do |b| %>

		<%= b.check_box %>
		<%= b.label %>
	<% end %>

	<%= f.submit %>
<% end %>